<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm" 
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
    xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking" 
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:s="http://schemas.abtsoftware.co.uk/scichart"
    xmlns:ViewModels="clr-namespace:ApplicationDSTS.ViewModels" 
    xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon" 
    x:Class="ApplicationDSTS.Views.MainView" 
    mc:Ignorable="d" d:DesignHeight="1080" d:DesignWidth="1920">
    <UserControl.Resources>

        <!-- ComboBox Customizing Style -->
        <Style TargetType="{x:Type dxe:ComboBoxEditItem}" x:Key="ContainerStyle">
            <Setter Property="Background" Value="{StaticResource MainColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style TargetType="{x:Type dx:SimpleButton}" x:Key="CustomPinButton">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type dx:SimpleButton}">
                        <Border Margin="5" Width="10" Height="15"
                                BorderBrush="Transparent"
                                CornerRadius="5">
                            <Grid>
                                <Path Data="M2,0 L2,8 L0,8 0,10 4,10 4,15 6,15 6,10 10,10 10,8 8,8 8,0 Z" 
                                      Fill="#FF575757" 
                                      Width="10" Height="15" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center" />
                                <Path Data="M3,1 L3,8 L5,8 5,1" 
                                      Fill="White" 
                                      Width="10" Height="15" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center" />
                            </Grid>

                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type dxdo:LayoutPanel}">
            <Setter Property="AllowClose" Value="False"/>
            <Setter Property="ShowCloseButton" Value="False"/>
            <Setter Property="AllowFloat" Value="True"/>
            <Setter Property="ShowPinButton" Value="True"/>
            <Setter Property="AllowDock" Value="{Binding PinCommand}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type dxdo:LayoutPanel}">
                        <Border Margin="0,5,5,5" Background="White">
                            <Grid>
                                <dx:SimpleButton Style="{StaticResource CustomPinButton}"
                                                 Foreground="Black"
                                                 HorizontalAlignment="Right"
                                                 VerticalAlignment="Top"
                                                 Margin="0,5,5,0"
                                                 Padding="0"
                                                 Visibility="Visible"
                                                 IsEnabled="True"
                                                 Command="{Binding PinCommand, RelativeSource={RelativeSource TemplatedParent}}" Click="SimpleButton_Click"
                                                 >
                                    
                                </dx:SimpleButton>
                                <!-- Header -->
                                <TextBlock Text="{TemplateBinding Caption}" 
                                               HorizontalAlignment="Center"
                                               Foreground="Black" 
                                               FontWeight="Bold" 
                                               FontSize="18"
                                               Margin="5" />


                                <!-- Content -->
                                <ContentPresenter Margin="5,30,5,5" />
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type GroupBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GroupBox}">
                        <Grid>
                            <!-- Header 영역 -->
                            <Border Background="#FF767676" Margin="5"
                                    HorizontalAlignment="Stretch" VerticalAlignment="Top">
                                <ContentPresenter ContentSource="Header" 
                                                  Margin="5"                                                  
                                                  VerticalAlignment="Center"                                                  
                                                  HorizontalAlignment="Center">
                                    <!-- 텍스트 스타일 설정 -->
                                    <ContentPresenter.ContentTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" 
                                                       Foreground="White" 
                                                       FontFamily="Malgun Gothic"
                                                       FontWeight="Bold" 
                                                       FontSize="15"
                                                       Height="25"
                                                       Margin="5,0,0,0" Padding="0"/>
                                        </DataTemplate>
                                    </ContentPresenter.ContentTemplate>
                                </ContentPresenter>
                            </Border>

                            <!-- 본문 영역 -->
                            <Border BorderBrush="#FF767676" 
                                    BorderThickness="3"
                                    Background="White"
                                    Margin="5,30,5,5">
                                <ContentPresenter ContentSource="Content"
                                                  Margin="10"
                                                  VerticalAlignment="Top"/>
                            </Border>

                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </UserControl.Resources>

    <UserControl.DataContext>
        <ViewModels:MainViewModel/>
    </UserControl.DataContext>

    <Grid>
        <dxdo:DockLayoutManager FloatingMode="Window" Background="#FFCD9451">
            <dxdo:LayoutGroup>
                <dxdo:LayoutGroup Orientation="Vertical">
                    <dxdo:TabbedGroup FontWeight="Bold" FontFamily="Malgun Gothic" Margin="5,0,0,5" MinWidth="300" MaxWidth="300">
                        <dxdo:LayoutPanel x:Name="layout1" Caption="System Control" MinWidth="300" MaxWidth="300" FontFamily="Malgun Gothic">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="5"/>
                                        <RowDefinition Height="280"/>
                                        <RowDefinition Height="290"/>
                                        <RowDefinition Height="320"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <GroupBox Grid.Row="1" Header="Device Information">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="1.2*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="5"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="15"/>
                                                <RowDefinition Height="35"/>
                                                <RowDefinition Height="5"/>
                                                <RowDefinition Height="35"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <Label Content="IP"
                                                   Grid.Row="1" Grid.Column="0"
                                                   Style="{StaticResource MainViewLabelStyle}"/>
                                            <dxe:TextEdit Grid.Column="1" Grid.Row="1"
                                                          Style="{StaticResource MainViewTextEditStyle}"/>

                                            <Label Content="Port" 
                                                   Grid.Row="2" Grid.Column="0"
                                                   Style="{StaticResource MainViewLabelStyle}"/>
                                            <dxe:TextEdit Grid.Column="1" Grid.Row="2"
                                                          Style="{StaticResource MainViewTextEditStyle}"/>

                                            <Label Content="Protocol" 
                                                   Grid.Row="3" Grid.Column="0"
                                                   Style="{StaticResource MainViewLabelStyle}"/>
                                            <dxe:ComboBoxEdit Grid.Column="1" Grid.Row="3"
                                                              Margin="2,2,10,2"
                                                              ItemContainerStyle="{StaticResource ContainerStyle}"/>
                                        </Grid>
                                    </GroupBox>

                                    <GroupBox Grid.Row="2" Header="DSTS Control">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="55*"/>
                                                <ColumnDefinition Width="45*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="5"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="15"/>
                                                <RowDefinition Height="35"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                        </Grid>
                                    </GroupBox>

                                    <GroupBox Grid.Row="3" Header="DSTS Configuration">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="55*"/>
                                                <ColumnDefinition Width="45*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="5"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="15"/>
                                                <RowDefinition Height="35"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                        </Grid>
                                    </GroupBox>
                                </Grid>
                            </ScrollViewer>
                        </dxdo:LayoutPanel>

                        <dxdo:LayoutPanel Caption="Trace Controls" MinWidth="260" MaxWidth="260" FontFamily="Malgun Gothic"
                                          AllowClose="False" ShowCloseButton="False">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="5"/>
                                        <RowDefinition Height="100"/>
                                        <RowDefinition Height="5"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <GroupBox Grid.Row="1" Header="Trace System Control" FontSize="13"
                                              VerticalContentAlignment="Center" Margin="5,0" Grid.ColumnSpan="3"
                                              Foreground="{StaticResource ForeGroundColor}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="5"/>
                                                <RowDefinition Height="35"/>
                                                <RowDefinition Height="15"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                        </Grid>

                                    </GroupBox>

                                    <!--Trace Group-->
                                    <GroupBox Grid.Row="3" Header="Trace Settings" FontSize="13" 
                                              VerticalContentAlignment="Center" Margin="5,0" Grid.ColumnSpan="2"
                                              Foreground="{StaticResource ForeGroundColor}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="5"/>
                                                <RowDefinition Height="35"/>
                                                <RowDefinition Height="15"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                        </Grid>
                                    </GroupBox>

                                    <!--Trace Chart Setting Group-->
                                    <GroupBox Grid.Row="5" Header="Trace Chart Set." FontSize="13" 
                                              VerticalContentAlignment="Center" Margin="5,0" Grid.ColumnSpan="2"
                                              Foreground="{StaticResource ForeGroundColor}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="5"/>
                                                <RowDefinition Height="35"/>
                                                <RowDefinition Height="15"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                        </Grid>
                                    </GroupBox>
                                </Grid>
                            </ScrollViewer>
                        </dxdo:LayoutPanel>
                    </dxdo:TabbedGroup>
                </dxdo:LayoutGroup>
            </dxdo:LayoutGroup>
        </dxdo:DockLayoutManager>
    </Grid>
</UserControl>
