                                    </s:SciChartSurface.XAxis>

                                    <s:SciChartSurface.YAxis>
                                        <s:NumericAxis Style="{StaticResource AxisStyle}" Visibility="Hidden" FlipCoordinates="True"
                                                       TickTextBrush="{StaticResource ForeGroundColor}"/>
                                    </s:SciChartSurface.YAxis>
                                </s:SciChartSurface>
                            </Grid>
                        </dxdo:LayoutPanel>

                        <!--Reference, Operation Chart-->
                        <dxdo:LayoutPanel IsSelectedItem="{Binding SelectOperation, Mode=OneWay}" TabIndex="0" IsTabStop="True" Caption="Operation Chart" ItemWidth="*" Margin="0,2,2,2" ShowCloseButton="False" AllowClose="False" FontFamily="Microsoft YaHei UI">
                            <Grid Background="#FF262E48">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="50*"/>
                                    <RowDefinition Height="50*"/>
                                </Grid.RowDefinitions>
                                <s:SciChartSurface x:Name="Chart2" Grid.Column="0" Grid.Row="0" Padding="0" Margin="5"
                                           s:ThemeManager.Theme="SciChartv7Navy"
                                           BorderBrush="{DynamicResource BorderColor}"
                                           ViewportManager="{Binding OPER_ViewportManager}">
                                    <s:SciChartSurface.Background>
                                        <RadialGradientBrush Center="0.5,0.5">
                                            <GradientStop Color="#FF3C476A" Offset="0"/>
                                            <GradientStop Color="#FF262E48" Offset="1"/>
                                        </RadialGradientBrush>
                                    </s:SciChartSurface.Background>
                                    <s:SciChartSurface.RenderableSeries>
                                        <s:FastLineRenderableSeries DataSeries="{Binding OPER_Series}"
                                                            Style="{StaticResource LineSeriesStyle}"/>
                                    </s:SciChartSurface.RenderableSeries>

                                    <!--  Create an X Axis  -->
                                    <s:SciChartSurface.XAxis>
                                        <s:NumericAxis DrawMajorTicks="True" DrawMinorTicks="False" 
                                               DrawMajorGridLines="True" DrawMinorGridLines="False"
                                               Foreground="{DynamicResource BorderColor}" 
                                               TickTextBrush="{DynamicResource BorderColor}"
                                               VisibleRange="{Binding OPER_XVisibleRange, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                            <s:NumericAxis.Style>
                                                <Style TargetType="{x:Type s:NumericAxis}">
                                                    <Setter Property="MajorGridLineStyle">
                                                        <Setter.Value>
                                                            <Style TargetType="{x:Type Line}">
                                                                <Setter Property="Stroke" Value="#FF242A5A"/>
                                                                <Setter Property="StrokeThickness" Value="1"/>
                                                            </Style>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </s:NumericAxis.Style>
                                        </s:NumericAxis>
                                    </s:SciChartSurface.XAxis>

                                    <!--  Create a Y Axis with GrowBy  -->
                                    <s:SciChartSurface.YAxis>
                                        <s:NumericAxis DrawMajorTicks="False" DrawMinorTicks="False" MinWidth="40" MaxWidth="40"
                                               DrawMajorGridLines="True" DrawMinorGridLines="False"
                                               VisibleRange="{Binding OPER_YVisibleRange, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                               TickTextBrush="{DynamicResource BorderColor}">
                                            <s:NumericAxis.Style>
                                                <Style TargetType="{x:Type s:NumericAxis}">
                                                    <Setter Property="MajorGridLineStyle">
                                                        <Setter.Value>
                                                            <Style TargetType="{x:Type Line}">
                                                                <Setter Property="Stroke" Value="#FF242A5A"/>
                                                                <Setter Property="StrokeThickness" Value="1"/>
                                                            </Style>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </s:NumericAxis.Style>
                                        </s:NumericAxis>
                                    </s:SciChartSurface.YAxis>

                                    <s:SciChartSurface.ChartModifier>
                                        <s:ModifierGroup>
                                            <!--<s:ZoomExtentsModifier ExecuteOn="MouseDoubleClick"/>-->
                                            <!--<s:RubberBandXyZoomModifier IsEnabled="{Binding EnableFFTZoom}"/>-->
                                            <s:MouseWheelZoomModifier x:Name="mouseWheelZoomModifier2"/>
                                            <s:ZoomPanModifier ClipModeX="None"/>
                                            <s:RolloverModifier ShowTooltipOn="Always"/>
                                        </s:ModifierGroup>
                                    </s:SciChartSurface.ChartModifier>
                                    <s:SciChartSurface.Annotations>
                                        <!--High Threshold-->
                                        <s:HorizontalLineAnnotation HorizontalAlignment="Stretch"
                                                            FontSize="13" Foreground="White" IsEditable="False" LabelPlacement="Axis"
                                                            LabelTextFormatting="0" ShowLabel="True" Stroke="#FFFF6060" BorderThickness="0.5" 
                                                            Y1="{Binding SystemDataModel.HThreshold, Mode=TwoWay, Source={x:Static Application.Current}, UpdateSourceTrigger=PropertyChanged}"
                                                            YDragStep="1"/>
                                        <!--Low Threshold-->
                                        <s:HorizontalLineAnnotation HorizontalAlignment="Stretch"
                                                            FontSize="13" Foreground="White" IsEditable="False" LabelPlacement="Axis"
                                                            LabelTextFormatting="0" ShowLabel="True" Stroke="#FFFF6060" BorderThickness="0.5"
                                                            Y1="{Binding SystemDataModel.LThreshold, Mode=TwoWay, Source={x:Static Application.Current}, UpdateSourceTrigger=PropertyChanged}"
                                                            YDragStep="1"/>
                                        <!--Zero Point-->
                                        <s:HorizontalLineAnnotation HorizontalAlignment="Stretch"
                                                            FontSize="13" Foreground="{DynamicResource Hamburger_Button.MouseOver.Background}" IsEditable="True" LabelPlacement="Axis"
                                                            LabelTextFormatting="0" ShowLabel="True" Stroke="White" BorderThickness="1"
                                                            Y1="0"
                                                            YDragStep="1"/>
                                    </s:SciChartSurface.Annotations>
                                </s:SciChartSurface>

                                <s:HeatmapColorMap Grid.RowSpan="2" Grid.Column="1" Margin="10" 
                                                   HorizontalAlignment="Right" VerticalAlignment="Stretch" 
                                                   BorderBrush="#777" BorderThickness="1" 
                                                   ColorMap="{Binding ColorMap.GradientStops, Converter={StaticResource ColorsToLineatGradientBrushConverter}, Source={x:Reference Name=HeatmapRenderableSeries2}}" 
                                                   Maximum="{Binding ColorMap.Maximum, Source={x:Reference Name=HeatmapRenderableSeries2}, UpdateSourceTrigger=PropertyChanged}" 
                                                   Minimum="{Binding ColorMap.Minimum, Source={x:Reference Name=HeatmapRenderableSeries2}, UpdateSourceTrigger=PropertyChanged}" 
                                                   Opacity="0.8" TextFormatting="0.00" Orientation="Vertical">
                                    <s:HeatmapColorMap.Background>
                                        <RadialGradientBrush Center="0.5,0.5">
                                            <GradientStop Color="#FF262E48" Offset="1"/>
                                        </RadialGradientBrush>
                                    </s:HeatmapColorMap.Background>
                                </s:HeatmapColorMap>

                                <s:SciChartSurface Grid.Row="1" Grid.Column="0" Margin="5 5 40 5">
                                    <s:SciChartSurface.Background>
                                        <RadialGradientBrush Center="0.5,0.5">
                                            <GradientStop Color="#FF3C476A" Offset="0"/>
                                            <GradientStop Color="#FF262E48" Offset="1"/>
                                        </RadialGradientBrush>
                                    </s:SciChartSurface.Background>
                                    <s:SciChartSurface.RenderableSeries>
                                        <s:FastUniformHeatmapRenderableSeries x:Name="HeatmapRenderableSeries2" 
                                                                      DataSeries="{Binding OPER_UniformHeatmapDataSeries, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                                      AutoPeakDetection="True">
                                            <s:FastUniformHeatmapRenderableSeries.ColorMap>
                                                <s:HeatmapColorPalette Minimum="{Binding OPER_ColorMinEdit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                               Maximum="{Binding OPER_ColorMaxEdit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                    <GradientStop Offset="0" Color="Transparent" />
                                                    <GradientStop Offset="0.0001" Color="{StaticResource ColorMapColor_1}" />
                                                    <GradientStop Offset="0.2" Color="{StaticResource ColorMapColor_2}" />
                                                    <GradientStop Offset="0.6" Color="{StaticResource ColorMapColor_3}" />
                                                    <GradientStop Offset="0.7" Color="{StaticResource ColorMapColor_4}" />
                                                    <GradientStop Offset="0.8" Color="{StaticResource ColorMapColor_5}" />
                                                    <GradientStop Offset="0.9" Color="{StaticResource ColorMapColor_6}" />
                                                    <GradientStop Offset="1" Color="{StaticResource ColorMapColor_7}" />
                                                </s:HeatmapColorPalette>
                                            </s:FastUniformHeatmapRenderableSeries.ColorMap>
                                        </s:FastUniformHeatmapRenderableSeries>
                                    </s:SciChartSurface.RenderableSeries>

                                    <s:SciChartSurface.XAxis>
                                        <s:NumericAxis VisibleRange="{Binding XAxis.VisibleRange, Mode=TwoWay, Source={x:Reference Name=Chart2}}"
                                               AxisTitle="Distance" Style="{StaticResource AxisStyle}"/>
                                        <!--<s:NumericAxis AutoRange="Once" VisibleRange="{Binding HitVisibleRange, Mode=TwoWay}" />-->
                                    </s:SciChartSurface.XAxis>

                                    <s:SciChartSurface.YAxis>
                                        <s:NumericAxis Style="{StaticResource AxisStyle}" Visibility="Hidden" FlipCoordinates="True" />
                                    </s:SciChartSurface.YAxis>
                                </s:SciChartSurface>
                            </Grid>
                        </dxdo:LayoutPanel>
                    </dxdo:TabbedGroup>
                </dxdo:LayoutGroup>
            </dxdo:LayoutGroup>
        </dxdo:DockLayoutManager>
    </Grid>
</UserControl>
