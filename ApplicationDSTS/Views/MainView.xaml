<UserControl 
    x:Class="ApplicationDSTS.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm" 
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
    xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking" 
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:s="http://schemas.abtsoftware.co.uk/scichart"
    xmlns:ViewModels="clr-namespace:ApplicationDSTS.ViewModels" 
    mc:Ignorable="d" d:DesignHeight="1080" d:DesignWidth="1920">

    <UserControl.Resources>
        <!-- ComboBox Customizing Style -->
        <Style TargetType="{x:Type dxe:ComboBoxEditItem}" x:Key="ContainerStyle">
            <Setter Property="Background" Value="{StaticResource MainColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <!--#region GroupBox Customizing Style --> 
        
        <Style TargetType="GroupBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <!-- Header 영역 -->
                            <Border Background="{StaticResource BorderColor}" Margin="5"
                                    HorizontalAlignment="Stretch" VerticalAlignment="Top">
                                <ContentPresenter ContentSource="Header" 
                                                  Margin="5"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center">
                                    <!-- 텍스트 스타일 설정 -->
                                    <ContentPresenter.ContentTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" 
                                                       Foreground="{StaticResource ForeGroundColor}" 
                                                       FontFamily="Malgun Gothic"
                                                       FontWeight="Bold" 
                                                       FontSize="18"
                                                       Margin="5,0,0,0"/>
                                        </DataTemplate>
                                    </ContentPresenter.ContentTemplate>
                                </ContentPresenter>
                            </Border>

                            <!-- 본문 영역 -->
                            <Border Background="Transparent" 
                                    BorderBrush="{StaticResource BorderColor}" 
                                    BorderThickness="2,0,2,2"
                                    Margin="5,30,5,5">
                                <ContentPresenter ContentSource="Content"
                                                  Margin="10"
                                                  VerticalAlignment="Top"/>
                            </Border>

                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!--#endregion-->
    </UserControl.Resources>
    
    <UserControl.DataContext>
        <ViewModels:MainViewModel/>
    </UserControl.DataContext>

    <Grid>
        <dxdo:DockLayoutManager FloatingMode="Window" Background="{StaticResource BackColor}">
            <dxdo:LayoutGroup>
                <dxdo:LayoutGroup Orientation="Vertical" ItemWidth="260">
                    
                    <dxdo:TabbedGroup Orientation="Horizontal">
                        <dxdo:LayoutPanel Caption="System Controls" MinWidth="300" MaxWidth="300" FontFamily="Malgun Gothic"
                                          AllowClose="False" ShowCloseButton="False" ShowPinButton="True" Background="{StaticResource BackColor}">
                            <dxdo:LayoutPanel.Style>
                                <Style TargetType="dxdo:LayoutPanel">
                                    <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
                                </Style>
                            </dxdo:LayoutPanel.Style>
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="5"/>
                                        <RowDefinition Height="280"/>
                                        <RowDefinition Height="290"/>
                                        <RowDefinition Height="320"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <GroupBox Grid.Row="1" Header="Address">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="1.2*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="5"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="15"/>
                                                <RowDefinition Height="35"/>
                                                <RowDefinition Height="5"/>
                                                <RowDefinition Height="35"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <Label Content="IP"
                                                   Grid.Row="1" Grid.Column="0"
                                                   Style="{StaticResource MainViewLabelStyle}"/>
                                            <dxe:TextEdit Grid.Column="1" Grid.Row="1"
                                                          Style="{StaticResource MainViewTextEditStyle}"/>
                                            
                                            <Label Content="Port" 
                                                   Grid.Row="2" Grid.Column="0"
                                                   Style="{StaticResource MainViewLabelStyle}"/>
                                            <dxe:TextEdit Grid.Column="1" Grid.Row="2"
                                                          Style="{StaticResource MainViewTextEditStyle}"/>
                                            
                                            <Label Content="Protocol" 
                                                   Grid.Row="3" Grid.Column="0"
                                                   Style="{StaticResource MainViewLabelStyle}"/>
                                            <dxe:ComboBoxEdit Grid.Column="1" Grid.Row="3"
                                                              Margin="2,2,10,2"
                                                              ItemContainerStyle="{StaticResource ContainerStyle}"/>
                                        </Grid>
                                    </GroupBox>

                                    <GroupBox Grid.Row="2" Header="Control">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="55*"/>
                                                <ColumnDefinition Width="45*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="5"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="15"/>
                                                <RowDefinition Height="35"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                        </Grid>
                                    </GroupBox>

                                    <GroupBox Grid.Row="3" Header="Configuration">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="55*"/>
                                                <ColumnDefinition Width="45*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="5"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="15"/>
                                                <RowDefinition Height="35"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                        </Grid>
                                    </GroupBox>
                                </Grid>
                            </ScrollViewer>
                        </dxdo:LayoutPanel>

                        <dxdo:LayoutPanel Caption="Trace Controls" MinWidth="260" MaxWidth="260" FontFamily="Malgun Gothic"
                                          AllowClose="False" ShowCloseButton="False">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="5"/>
                                        <RowDefinition Height="100"/>
                                        <RowDefinition Height="5"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <GroupBox Grid.Row="1" Header="Trace System Control" FontSize="13"
                                              VerticalContentAlignment="Center" Margin="5,0" Grid.ColumnSpan="3"
                                              Foreground="{StaticResource ForeGroundColor}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="5"/>
                                                <RowDefinition Height="35"/>
                                                <RowDefinition Height="15"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                        </Grid>
                                        
                                    </GroupBox>

                                    <!--Trace Group-->
                                    <GroupBox Grid.Row="3" Header="Trace Settings" FontSize="13" 
                                              VerticalContentAlignment="Center" Margin="5,0" Grid.ColumnSpan="2"
                                              Foreground="{StaticResource ForeGroundColor}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="5"/>
                                                <RowDefinition Height="35"/>
                                                <RowDefinition Height="15"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                        </Grid>
                                    </GroupBox>

                                    <!--Trace Chart Setting Group-->
                                    <GroupBox Grid.Row="5" Header="Trace Chart Set." FontSize="13" 
                                              VerticalContentAlignment="Center" Margin="5,0" Grid.ColumnSpan="2"
                                              Foreground="{StaticResource ForeGroundColor}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="5"/>
                                                <RowDefinition Height="35"/>
                                                <RowDefinition Height="15"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                        </Grid>
                                    </GroupBox>
                                </Grid>
                            </ScrollViewer>
                        </dxdo:LayoutPanel>
                    </dxdo:TabbedGroup>
                </dxdo:LayoutGroup>
            </dxdo:LayoutGroup>
        </dxdo:DockLayoutManager>
    </Grid>
</UserControl>
