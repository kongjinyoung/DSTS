<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm" 
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
    xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking" 
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:s="http://schemas.abtsoftware.co.uk/scichart"
    xmlns:ViewModels="clr-namespace:ApplicationDSTS.ViewModels" 
    xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
    x:Class="ApplicationDSTS.Views.MainView" 
    mc:Ignorable="d" d:DesignHeight="1080" d:DesignWidth="1920">
    <UserControl.Resources>
        <s:GradientStopsToLinearGradientBrushConverter x:Key="ColorsToLineatGradientBrushConverter"/>

        <Style TargetType="{x:Type dxdo:LayoutPanel}">
            <Setter Property="AllowDrag" Value="False"/>
            <Setter Property="AllowClose" Value="False"/>
            <Setter Property="ShowCloseButton" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type dxdo:LayoutPanel}">
                        <Border Margin="0,5,0,5">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="1,0.5" StartPoint="0.5,0">
                                    <GradientStop Color="#F2F2F2" Offset="1"/>
                                    <GradientStop Color="#FFEEEEEE" Offset="0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid>
                                <!-- Header -->
                                <TextBlock Text="{TemplateBinding Caption}" 
                                           HorizontalAlignment="Center"
                                           Foreground="Black" 
                                           FontFamily="Malgun Gothic"
                                           FontWeight="Bold" 
                                           FontSize="18"
                                           Margin="0,0,0,0" />
                                <!-- Content -->
                                <ContentPresenter Margin="5,30,5,5" />
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type GroupBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GroupBox}">
                        <Grid>
                            <!-- Header 영역 -->
                            <Border Margin="0,0,5,0"
                                    HorizontalAlignment="Stretch" VerticalAlignment="Top">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FFFFAE00" Offset="1"/>
                                        <GradientStop Color="#FFC96B5C" Offset=".4"/>
                                        <GradientStop Color="#FFFFAE00" Offset="0"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <ContentPresenter ContentSource="Header" 
                                                  Margin="5"                                                  
                                                  VerticalAlignment="Center"                                                  
                                                  HorizontalAlignment="Center">
                                    <!-- 텍스트 스타일 설정 -->
                                    <ContentPresenter.ContentTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" 
                                                       Foreground="White" 
                                                       FontFamily="Consolas"
                                                       FontWeight="Bold" 
                                                       FontSize="15"
                                                       Height="25"
                                                       Margin="5,0,0,0" Padding="0"/>
                                        </DataTemplate>
                                    </ContentPresenter.ContentTemplate>
                                </ContentPresenter>
                            </Border>

                            <!-- 본문 영역 -->
                            <Border BorderThickness="3"
                                    Margin="0,30,5,5">
                                <Border.BorderBrush>
                                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0.5,0">
                                        <GradientStop Color="#FFFFAE00" Offset="1"/>
                                        <GradientStop Color="#FFC96B5C" Offset=".4"/>
                                        <GradientStop Color="#FFE28A31" Offset="0"/>
                                    </LinearGradientBrush>
                                </Border.BorderBrush>
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0.1,0">
                                        <GradientStop Color="#FFEAEAEA" Offset="0"/>
                                        <GradientStop Color="White" Offset=".4"/>
                                        <GradientStop Color="#FFEAEAEA" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <ContentPresenter ContentSource="Content"
                                                  Margin="10"
                                                  VerticalAlignment="Top"/>
                            </Border>

                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="borderTemplate">
            <Border x:Name="border" Width="50"  Height="26"
                   Background="Transparent" 
                   BorderThickness="1" 
                   BorderBrush="{StaticResource ForeGroundColor}" 
                   CornerRadius="10"/>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType={x:Type ToggleButton}}}" Value="True">
                    <Setter Property="Background" TargetName="border" Value="Transparent"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <DataTemplate x:Key="thumbTemplate">
            <Ellipse x:Name="thumb"
                     VerticalAlignment="Center" HorizontalAlignment="Center"
                     Width="16" Height="16" Margin="4,0">
                <Ellipse.Fill>
                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0.1,0">
                        <GradientStop Color="Red" Offset="1"/>
                        <GradientStop Color="#FFFFA3A3" Offset=".4" />
                        <GradientStop Color="#FF970303" Offset="0"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType={x:Type ToggleButton}}}" Value="True">
                    <Setter Property="Fill" TargetName="thumb">
                        <Setter.Value>
                            <LinearGradientBrush EndPoint="1,0.5" StartPoint="0.1,0">
                                <GradientStop Color="#FF1ABD00" Offset="1"/>
                                <GradientStop Color="#FFD9FFA3" Offset=".4" />
                                <GradientStop Color="#FF169B01" Offset="0"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <Style x:Key="AxisStyle" TargetType="{x:Type s:AxisBase}">
            <Setter Property="DrawMajorBands" Value="False"/>
            <Setter Property="IsPrimaryAxis" Value="False"/>
            <Setter Property="AxisBandsFill" Value="Transparent"/>
            <Setter Property="DrawMajorGridLines" Value="false"/>
            <Setter Property="DrawMinorGridLines" Value="false"/>

            <Setter Property="MajorTickLineStyle">
                <Setter.Value>
                    <Style TargetType="{x:Type Line}">
                        <Setter Property="Stroke" Value="Transparent"/>
                    </Style>
                </Setter.Value>
            </Setter>

            <Setter Property="MinorTickLineStyle">
                <Setter.Value>
                    <Style TargetType="{x:Type Line}">
                        <Setter Property="Stroke" Value="Transparent"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TooltipContainer" TargetType="{x:Type s:TooltipControl}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type s:TooltipControl}">
                        <Border Background="#ff6495ed"
                                BorderBrush="#ff87B1FA"
                                BorderThickness="1"
                                CornerRadius="6"
                                Opacity="0.9"
                                Padding="5">
                            <ContentPresenter Content="{TemplateBinding DataContext}"
                                              ContentTemplate="{TemplateBinding ContentTemplate}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="TooltipTemplate" DataType="s:XySeriesInfo">
            <StackPanel Orientation="Vertical">
                <TextBlock Foreground="White"><Run Text="{Binding SeriesName, StringFormat=\{0\}:}"/></TextBlock>
                <TextBlock Foreground="White"><Run Text="Distance: "/><Run Text=" "/><Run Text="{Binding FormattedXValue, Mode=OneWay}"/></TextBlock>
                <TextBlock Foreground="White"><Run Text="Value: "/><Run Text=" "/><Run Text="{Binding FormattedYValue, Mode=OneWay}"/></TextBlock>
            </StackPanel>
        </DataTemplate>

        <Style x:Key="LineSeriesStyle" TargetType="{x:Type s:BaseRenderableSeries}"  >
            <Setter Property="s:RolloverModifier.TooltipContainerStyle" Value="{StaticResource TooltipContainer}"/>
            <Setter Property="s:RolloverModifier.TooltipTemplate" Value="{StaticResource TooltipTemplate}"/>
            <Setter Property="s:RolloverModifier.IncludeSeries" Value="True"/>
            <Setter Property="StrokeThickness" Value="1"/>
        </Style>

    </UserControl.Resources>

    <UserControl.DataContext>
        <ViewModels:MainViewModel/>
    </UserControl.DataContext>

    <Grid>
        <dxdo:DockLayoutManager FloatingMode="Window" Background="White">
            <dxdo:LayoutGroup>
                <dxdo:LayoutGroup Orientation="Horizontal">
                    <dxdo:TabbedGroup FontWeight="Bold" FontFamily="Malgun Gothic" Margin="5,0,0,5" MinWidth="240" MaxWidth="240">
                        <dxdo:LayoutPanel Caption="SYSTEM SET." MinWidth="240" MaxWidth="240">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="5"/>
                                        <RowDefinition Height="280"/>
                                        <RowDefinition Height="140"/>
                                        <RowDefinition Height="350"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!--DSTS Address Group-->
                                    <GroupBox Grid.Row="1" Header="Device Address" Margin="0,0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="1.2*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="5"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="5"/>
                                                <RowDefinition Height="35"/>
                                                <RowDefinition Height="5"/>
                                                <RowDefinition Height="35"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <Label Content="IP"
                                                   Grid.Row="1" Grid.Column="0"
                                                   Style="{StaticResource MainViewLabelStyle}"/>
                                            <dxe:TextEdit Grid.Column="1" Grid.Row="1"
                                                          Style="{StaticResource MainViewTextEditStyle}"
                                                          EditValue="{Binding CommonSetDataModel.IpAddress, Mode=TwoWay, Source={x:Static Application.Current}, UpdateSourceTrigger=PropertyChanged}"/>

                                            <Label Content="Port" 
                                                   Grid.Row="2" Grid.Column="0"
                                                   Style="{StaticResource MainViewLabelStyle}"/>
                                            <dxe:TextEdit Grid.Column="1" Grid.Row="2"
                                                          Style="{StaticResource MainViewTextEditStyle}"
                                                          EditValue="{Binding CommonSetDataModel.Port, Mode=TwoWay, Source={x:Static Application.Current}, UpdateSourceTrigger=PropertyChanged}"/>

                                            <Label Content="Protocol" 
                                                   Grid.Row="3" Grid.Column="0"
                                                   Style="{StaticResource MainViewLabelStyle}"/>
                                            <dxe:ComboBoxEdit Grid.Column="1" Grid.Row="3"
                                                              Margin="5,2,0,2"
                                                              HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Normal"
                                                              SelectedItem="{Binding CommonSetDataModel.Protocol, Mode=TwoWay, Source={x:Static Application.Current}, UpdateSourceTrigger=PropertyChanged}"
                                                              ItemsSource="{Binding ProtocolModeList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                                            <dx:SimpleButton Content="Sleep Mode" 
                                                             Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" 
                                                             FontFamily="Microsoft YaHei UI" BorderThickness="1" 
                                                             HorizontalContentAlignment="Center" 
                                                             Margin="0"  FontSize="13" FontWeight="Normal"
                                                             Focusable="False"
                                                             dx:ThemeManager.ThemeName="Win10Light"
                                                             Foreground="{StaticResource ForeGroundColor}"
                                                             BorderBrush="{StaticResource ForeGroundColor}"
                                                             Background="{StaticResource ButtonBackColor}"
                                                             Glyph="{dx:DXImage 'SvgImages/Icon Builder/Security_Lock.svg'}"
                                                             Command="{Binding Cmd_SleepMode}"/>
                                            
                                            <dx:SimpleButton Content="Change Address" 
                                                             Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" 
                                                             FontFamily="Microsoft YaHei UI" BorderThickness="1" 
                                                             HorizontalContentAlignment="Center" 
                                                             Margin="0"  FontSize="13" FontWeight="Normal"
                                                             Focusable="False"
                                                             dx:ThemeManager.ThemeName="Win10Light"
                                                             Foreground="{StaticResource ForeGroundColor}"
                                                             BorderBrush="{StaticResource ForeGroundColor}"
                                                             Background="{StaticResource ButtonBackColor}"
                                                             Glyph="{dx:DXImage 'SvgImages/Outlook Inspired/ChangeView.svg'}"
                                                             Command="{Binding Cmd_ChangeAddress}"/>
                                        </Grid>
                                    </GroupBox>

                                    <!--DSTS Control Group-->
                                    <GroupBox Grid.Row="2" Header="DSTS Control" Margin="0,0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="55*"/>
                                                <ColumnDefinition Width="45*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="5"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="5"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <Label Content="Light status"
                                                   Grid.Row="1" Grid.Column="0"
                                                   Style="{StaticResource MainViewLabelStyle}"/>
                                            <dxe:ToggleSwitch Grid.Row="1" Grid.Column="1" 
                                                              ToggleSwitchWidth="50" ToggleSwitchHeight="26" Width="70"
                                                              HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch"
                                                              AnimationMode="OnToggle"
                                                              dx:ThemeManager.ThemeName="Office2019Colorful"
                                                              SwitchBorderTemplate="{StaticResource borderTemplate}"
                                                              SwitchThumbTemplate="{StaticResource thumbTemplate}"
                                                              IsChecked="{Binding ControlSetDataModel.LightStatus, Mode=TwoWay, Source={x:Static Application.Current}, UpdateSourceTrigger=PropertyChanged}"/>

                                            <Label Content="Pulse status"
                                                   Grid.Row="3" Grid.Column="0"
                                                   Style="{StaticResource MainViewLabelStyle}"/>
                                            <dxe:ToggleSwitch Grid.Row="3" Grid.Column="1" 
                                                              ToggleSwitchWidth="50" ToggleSwitchHeight="26" Width="70"
                                                              HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch"
                                                              AnimationMode="OnToggle"
                                                              dx:ThemeManager.ThemeName="Office2019Colorful"
                                                              SwitchBorderTemplate="{StaticResource borderTemplate}"
                                                              SwitchThumbTemplate="{StaticResource thumbTemplate}"
                                                              IsChecked="{Binding ControlSetDataModel.PulseStatus, Mode=TwoWay, Source={x:Static Application.Current}, UpdateSourceTrigger=PropertyChanged}"/>
                                        </Grid>
                                    </GroupBox>

                                    <!--DSTS Configuration Group-->
                                    <GroupBox Grid.Row="3" Header="DSTS Configuration" Margin="0,0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="55*"/>
                                                <ColumnDefinition Width="45*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="5"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="15"/>
                                                <RowDefinition Height="35"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <!--공간 분해능-->
                                            <Label Content="Spat. Res."
                                                   Grid.Row="1" Grid.Column="0"
                                                   Style="{StaticResource MainViewLabelStyle}"/>
                                            <dxe:TextEdit Grid.Column="1" Grid.Row="1"
                                                          Style="{StaticResource MainViewTextEditStyle}"
                                                          EditValue="{Binding ConfigureSetDataModel.SpatRes, Mode=TwoWay, Source={x:Static Application.Current}, UpdateSourceTrigger=PropertyChanged}"/>
                                            <!--공간 샘플링 간격-->
                                            <Label Content="Samp. interval"
                                                   Grid.Row="2" Grid.Column="0"
                                                   Style="{StaticResource MainViewLabelStyle}"/>
                                            <dxe:TextEdit Grid.Column="1" Grid.Row="2"
                                                          Style="{StaticResource MainViewTextEditStyle}"
                                                          EditValue="{Binding ConfigureSetDataModel.SampInterval, Mode=TwoWay, Source={x:Static Application.Current}, UpdateSourceTrigger=PropertyChanged}"/>
                                            <!--계측 거리-->
                                            <Label Content="Range"
                                                   Grid.Row="3" Grid.Column="0"
                                                   Style="{StaticResource MainViewLabelStyle}"/>
                                            <dxe:TextEdit Grid.Column="1" Grid.Row="3"
                                                          Style="{StaticResource MainViewTextEditStyle}"
                                                          EditValue="{Binding ConfigureSetDataModel.Range, Mode=TwoWay, Source={x:Static Application.Current}, UpdateSourceTrigger=PropertyChanged}"/>
                                            <!--적분 횟수-->
                                            <Label Content="Integ. Num."
                                                   Grid.Row="4" Grid.Column="0"
                                                   Style="{StaticResource MainViewLabelStyle}"/>
                                            <dxe:ComboBoxEdit Grid.Column="1" Grid.Row="4"
                                                              Margin="5,2,0,2"
                                                              FontWeight="Normal" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                                                              SelectedItem="{Binding ConfigureSetDataModel.IntegNum, Mode=TwoWay, Source={x:Static Application.Current}, UpdateSourceTrigger=PropertyChanged}"
                                                              ItemsSource="{Binding IntegNumList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                            <!--시작 탐사 주파수-->
                                            <Label Content="Init. Freq."
                                                   Grid.Row="5" Grid.Column="0"
                                                   Style="{StaticResource MainViewLabelStyle}"/>
                                            <dxe:TextEdit Grid.Column="1" Grid.Row="5"
                                                          Style="{StaticResource MainViewTextEditStyle}"
                                                          EditValue="{Binding ConfigureSetDataModel.InitFreq, Mode=TwoWay, Source={x:Static Application.Current}, UpdateSourceTrigger=PropertyChanged}"/>
                                            <!--탐사 주파수 간격-->
                                            <Label Content="Sample interval"
                                                   Grid.Row="6" Grid.Column="0"
                                                   Style="{StaticResource MainViewLabelStyle}"/>
                                            <dxe:TextEdit Grid.Column="1" Grid.Row="6"
                                                          Style="{StaticResource MainViewTextEditStyle}"
                                                          EditValue="{Binding ConfigureSetDataModel.SweepInterval, Mode=TwoWay, Source={x:Static Application.Current}, UpdateSourceTrigger=PropertyChanged}"/>
                                            <!--탐사 주파스 스윕 횟수-->
                                            <Label Content="Sample Num."
                                                   Grid.Row="7" Grid.Column="0"
                                                   Style="{StaticResource MainViewLabelStyle}"/>
                                            <dxe:TextEdit Grid.Column="1" Grid.Row="7"
                                                          Style="{StaticResource MainViewTextEditStyle}"
                                                          EditValue="{Binding ConfigureSetDataModel.SweepNum, Mode=TwoWay, Source={x:Static Application.Current}, UpdateSourceTrigger=PropertyChanged}"/>

                                            <dx:SimpleButton Content="Save Config." 
                                                             Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" 
                                                             FontFamily="Microsoft YaHei UI" BorderThickness="1" 
                                                             HorizontalContentAlignment="Center" 
                                                             Margin="0"  FontSize="13" FontWeight="Normal"
                                                             Focusable="False"
                                                             dx:ThemeManager.ThemeName="Win10Light"
                                                             Foreground="{StaticResource ForeGroundColor}"
                                                             BorderBrush="{StaticResource ForeGroundColor}"
                                                             Background="{StaticResource ButtonBackColor}"
                                                             Glyph="{dx:DXImage SvgImages/XAF/Action_LocalizationExport.svg}"
                                                             Command="{Binding Cmd_SaveConfigure}"/>
                                        </Grid>
                                    </GroupBox>
                                </Grid>
                            </ScrollViewer>
                        </dxdo:LayoutPanel>

                        <dxdo:LayoutPanel Caption="TRACE SET." MinWidth="240" MaxWidth="240"
                                          IsSelectedItem="{Binding SelectTrace, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="105"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="310"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!--Trace Operation Group-->
                                    <GroupBox Grid.Row="0" Header="Trace control" FontSize="13"
                                              VerticalContentAlignment="Center" Margin="0,0" Grid.ColumnSpan="2"
                                              Foreground="{StaticResource ForeGroundColor}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="5"/>
                                                <RowDefinition Height="35"/>
                                                <RowDefinition Height="5"/>
                                            </Grid.RowDefinitions>


                                            <dx:SimpleButton Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                                             Margin="0,1,0,1"  FontSize="13"
                                                             FontFamily="Microsoft YaHei UI" HorizontalContentAlignment="Center" 
                                                             dx:ThemeManager.ThemeName="Win10Light"
                                                             Focusable="False" ButtonKind="Toggle"
                                                             Foreground="#FF970303"
                                                             FontWeight="Normal"
                                                             Background="{StaticResource ButtonBackColor}"
                                                             Command="{Binding Cmd_TraceMovement}"
                                                             IsChecked="{Binding TraceButtonBusy}"
                                                             IsEnabled="{Binding TraceButtonEnable}">
                                                <dx:SimpleButton.Style>
                                                    <Style TargetType="{x:Type dx:SimpleButton}">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding TraceButtonBusy}" Value="True">
                                                                <Setter Property="Content" Value="Start Trace"/>
                                                                <Setter Property="Glyph" Value="pack://application:,,,/DevExpress.Images.v23.1;component/SvgImages/XAF/Action_Debug_Start.svg"/>
                                                                <Setter Property="BorderBrush" Value="{StaticResource StartButton}"/>
                                                                <Setter Property="BorderThickness" Value="2"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding TraceButtonBusy}" Value="False">
                                                                <Setter Property="Content" Value="Stop Trace"/>
                                                                <Setter Property="Glyph" Value="pack://application:,,,/DevExpress.Images.v23.1;component/SvgImages/XAF/Action_Close.svg"/>
                                                                <Setter Property="BorderBrush" Value="{StaticResource StopButton}"/>
                                                                <Setter Property="BorderThickness" Value="2"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </dx:SimpleButton.Style>
                                            </dx:SimpleButton>
                                        </Grid>
                                    </GroupBox>

                                    <!--Trace Settings Group-->
                                    <GroupBox Grid.Row="1" Header="Configure Trace" FontSize="13" 
                                              VerticalContentAlignment="Center" Margin="0,0" Grid.ColumnSpan="2"
                                              Foreground="{StaticResource ForeGroundColor}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="5"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="5"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="32"/>
                                                <RowDefinition Height="35"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <Label Content="Trace Mode"
                                                   Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" FontWeight="Bold" Width="92" Padding="0"
                                                   Foreground="Black" FontSize="14" HorizontalAlignment="Left"
                                                   Style="{StaticResource MainViewLabelStyle}" Margin="0"/>
                                            <dxe:ToggleSwitch Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2"
                                                              ToggleSwitchWidth="50" ToggleSwitchHeight="26" Width="145"
                                                              HorizontalAlignment="Center" HorizontalContentAlignment="Stretch" VerticalAlignment="Center" VerticalContentAlignment="Stretch"                                                                                                                            
                                                              CheckedStateContent="Pair" UncheckedStateContent="Single" ContentPlacement="Both"
                                                              AnimationMode="OnToggle"
                                                              dx:ThemeManager.ThemeName="Office2019Colorful" Height="26"
                                                              SwitchBorderTemplate="{StaticResource borderTemplate}"
                                                              SwitchThumbTemplate="{StaticResource thumbTemplate}"                                                              
                                                              IsChecked="{Binding TraceMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="17,3,22,3"/>

                                            <Label Content="EDFA 1"
                                                   Grid.Row="4" Grid.Column="0"
                                                   Style="{StaticResource MainViewLabelStyle}"/>
                                            <dxe:TextEdit Grid.Column="1" Grid.Row="4"
                                                          Style="{StaticResource MainViewTextEditStyle}"
                                                          EditValue="{Binding TraceSetDataModel.Edfa1, Mode=TwoWay, Source={x:Static Application.Current}, UpdateSourceTrigger=PropertyChanged}"/>

                                            <Label Content="EDFA 2"
                                                   Grid.Row="5" Grid.Column="0"
                                                   Style="{StaticResource MainViewLabelStyle}"/>
                                            <dxe:TextEdit Grid.Column="1" Grid.Row="5"
                                                          Style="{StaticResource MainViewTextEditStyle}"
                                                          EditValue="{Binding TraceSetDataModel.Edfa2, Mode=TwoWay, Source={x:Static Application.Current}, UpdateSourceTrigger=PropertyChanged}"/>

                                            <Label Content="Atten. bias 1"
                                                   Grid.Row="6" Grid.Column="0"
                                                   Style="{StaticResource MainViewLabelStyle}"/>
                                            <dxe:TextEdit Grid.Column="1" Grid.Row="6"
                                                          Style="{StaticResource MainViewTextEditStyle}"
                                                          EditValue="{Binding TraceSetDataModel.ABias1, Mode=TwoWay, Source={x:Static Application.Current}, UpdateSourceTrigger=PropertyChanged}"/>

                                            <Label Content="Atten. bias 2"
                                                   Grid.Row="7" Grid.Column="0"
                                                   Style="{StaticResource MainViewLabelStyle}"/>
                                            <dxe:TextEdit Grid.Column="1" Grid.Row="7"
                                                          Style="{StaticResource MainViewTextEditStyle}"
                                                          EditValue="{Binding TraceSetDataModel.ABias2, Mode=TwoWay, Source={x:Static Application.Current}, UpdateSourceTrigger=PropertyChanged}"/>

                                            <Label Content="Probe Freq."
                                                   Grid.Row="8" Grid.Column="0"
