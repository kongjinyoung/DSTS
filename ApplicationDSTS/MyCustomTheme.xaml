<ResourceDictionary x:Class="ApplicationDSTS.MyCustomTheme"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <SolidColorBrush x:Key="TickTextBrush" Color="Yellow" />
    <!--차트 배경-->
    <LinearGradientBrush x:Key="GridBackgroundBrush" EndPoint="1,0.5" StartPoint="0.1,0">
        <GradientStop Color="#FFEAEAEA" Offset="0"/>
    </LinearGradientBrush>
    <Color x:Key="AxisBandsFill">#FFEAEAEA</Color>
    <!--Major 간격-->
    <SolidColorBrush x:Key="MajorGridLineBrush" Color="#EB8317" />
    <!--Minor 간격-->
    <SolidColorBrush x:Key="MinorGridLineBrush" Color="#FFC96B5C" />
    <!--커서 라인-->
    <SolidColorBrush x:Key="RolloverLineBrush" Color="#0B4F4E" />
    <!--커서 텍스트-->
    <SolidColorBrush x:Key="LabelForegroundBrush" Color="White" />
    <!--커서 텍스트 배경-->
    <SolidColorBrush x:Key="LabelBackgroundBrush" Color="#0B4F4E" />
    <!--커서 그림자 이펙트-->
    <Color x:Key="ShadowEffectColor">Gray</Color>


    <!--#region Not Used -->
    <!--  Default Series Colors  -->
    <SolidColorBrush x:Key="GridBorderBrush" Color="Green" />
    <SolidColorBrush x:Key="CursorLineBrush" Color="green" />
    <SolidColorBrush x:Key="RubberBandFillBrush" Color="Green" />
    <SolidColorBrush x:Key="RubberBandStrokeBrush" Color="Green" />
    <SolidColorBrush x:Key="LegendBackgroundBrush" Color="Green" />
    <Color x:Key="UpWickColor">green</Color>
    <Color x:Key="DownWickColor">green</Color>
    <SolidColorBrush x:Key="UpBodyBrush" Color="Green" />
    <SolidColorBrush x:Key="DownBodyBrush" Color="Green" />

    <Color x:Key="UpBandSeriesLineColor">green</Color>
    <Color x:Key="DownBandSeriesLineColor">green</Color>
    <Color x:Key="UpBandSeriesFillColor">green</Color>
    <Color x:Key="DownBandSeriesFillColor">green</Color>

    <LinearGradientBrush x:Key="MountainAreaBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="green" Offset="0"/>
        <GradientStop Color="Green" Offset="1"/>
    </LinearGradientBrush>
    <Color x:Key="MountainLineColor">green</Color>
    <Color x:Key="LineSeriesColor">green</Color>
    <Color x:Key="ColumnLineColor">green</Color>
    <SolidColorBrush x:Key="ColumnFillBrush" Color="green"></SolidColorBrush>
    <Brush x:Key="OverviewFillBrush">green</Brush>
    <Brush x:Key="ScrollbarViewportBackgroundBrush">green</Brush>
    <SolidColorBrush x:Key="DefaultColorMapBrush">green</SolidColorBrush>
    <!-- 3D Chart specific themes -->
    <Color x:Key="PlaneBorderColor">Transparent</Color>
    <Color x:Key="AxisPlaneBackgroundFill">Transparent</Color>
    <Color x:Key="Axis3DBandsFill">Transparent</Color>
    <!--#endregion-->
</ResourceDictionary>