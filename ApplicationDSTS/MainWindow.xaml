<dx:ThemedWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:Views="clr-namespace:ApplicationDSTS.Views"
    xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui" 
    xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon" 
    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars" 
    x:Class="ApplicationDSTS.MainWindow"
    Title="DSS 분석 앱" Height="1040" Width="1920" WindowStartupLocation="CenterScreen" ResizeMode="CanResize"
    WindowStyle="None" FontFamily="Malgun Gothic" Icon="Assets/64xLogo.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="34"/>
        </Grid.RowDefinitions>
        <!--Menu + Frame-->
        <dxwui:HamburgerMenu Grid.Row="0" Grid.Column="0" AvailableViewStates="Overlay" Background="{StaticResource BackColor}" >
            <dxwui:HamburgerMenu.Content>
                <dxwui:NavigationFrame x:Name="NaviFrame" BorderThickness="1,0,0,0"/>
            </dxwui:HamburgerMenu.Content>
            <!--Monitoring-->
            <dxwui:HamburgerMenuNavigationButton x:Name="btn_monitoring" Content="Home" ToolTip="System Monitoring" FontFamily="HYGothic-Extra" FontSize="14"
                                                 GlyphWidth="32" GlyphHeight="32" IsSelected="True" AllowGlyphTheming="True" 
                                                 Glyph="{dx:DXImage 'GrayScaleImages/Navigation/Home_32x32.png'}" Click="btn_monitoring_Click"
                                                 />
            <!--History-->
            <dxwui:HamburgerMenuNavigationButton x:Name="btn_history" Content="History" ToolTip="System History" FontFamily="HYGothic-Extra" FontSize="14"
                                                 GlyphWidth="32" GlyphHeight="32" AllowGlyphTheming="True" Glyph="{dx:DXImage SvgImages/RichEdit/DocumentStatistics.svg}" Click="btn_history_Click" 
                                                 />

            <dxwui:HamburgerMenuItemSeparator Height="10"/>

            <dxwui:HamburgerMenuItemSeparator Height="10" Placement="Bottom"/>

            <!--System Close-->
            <dxwui:HamburgerMenuNavigationButton x:Name="ExitBtn" Content="Exit" ToolTip="Close App" FontFamily="HYGothic-Extra" FontSize="14" Placement="Bottom"
                                                 GlyphWidth="32" GlyphHeight="32" AllowGlyphTheming="True" Glyph="{dx:DXImage SvgImages/XAF/Action_Redo.svg}"
                                                 Click="ExitBtn_Click"/>
            <!--Uptec Info-->
            <dxwui:HamburgerMenuNavigationButton Content="UPTEC" ToolTip="Uptec Info" GlyphWidth="32" GlyphHeight="32" Placement="Bottom"
                                                 Glyph="Assets/Uptec_symbol_White4.png" GlyphStretch="UniformToFill"
                                                 Click="InfoBtn_Click" FontFamily="HYGothic-Extra" FontSize="20" FontWeight="Bold"/>
        </dxwui:HamburgerMenu>

        <!--Log-->
        <dxr:RibbonStatusBarControl HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Stretch" dx:ThemeManager.ThemeName="Win11Light">
            
            <dxr:RibbonStatusBarControl.LeftItems>
                <!--DAS-->
                <dxb:BarStaticItem ShowBorder="False" 
                                   AllowGlyphTheming="True"
                                   GlyphSize="Custom" CustomGlyphSize="23,23" Margin="0,0,0,3"
                                   Glyph="{dx:DXImage SvgImages/Icon Builder/Electronics_Router.svg}"
                                   Content="{Binding StatusManager.Network, Source={x:Static Application.Current}, UpdateSourceTrigger=PropertyChanged}">
                    <dxb:BarStaticItem.ContentTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Margin="10,0,0,1" FontSize="14" FontWeight="Normal" VerticalAlignment="Center"/>
                        </DataTemplate>
                    </dxb:BarStaticItem.ContentTemplate>
                </dxb:BarStaticItem>
                <dxb:BarStaticItem Content="              " ShowBorder="False"/>

                <!--System Message-->
                <dxb:BarStaticItem ShowBorder="False"
                                   AllowGlyphTheming="True"
                                   GlyphSize="Custom" CustomGlyphSize="23,23" Margin="0,0,0,3"
                                   Glyph="{dx:DXImage SvgImages/Icon Builder/Actions_Comment.svg}"
                                   Content="{Binding StatusManager.CommState, Source={x:Static Application.Current}}">
                    <dxb:BarStaticItem.ContentTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Margin="10,0,0,1" FontSize="14" FontWeight="Normal" VerticalAlignment="Center"/>
                        </DataTemplate>
                    </dxb:BarStaticItem.ContentTemplate>
                </dxb:BarStaticItem>
            </dxr:RibbonStatusBarControl.LeftItems>

            <dxr:RibbonStatusBarControl.RightItems>
                <dxb:BarStaticItem Content="{Binding StatusManager.SystemState, Source={x:Static Application.Current}}" ShowBorder="False" Foreground="#FFF78A09" >
                    <dxb:BarStaticItem.ContentTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Margin="10,0,0,1" FontSize="14" FontWeight="Normal" Foreground="White" VerticalAlignment="Center"/>
                        </DataTemplate>
                    </dxb:BarStaticItem.ContentTemplate>
                </dxb:BarStaticItem>
                <dxb:BarStaticItem Content="              " ShowBorder="False"/>

                <dxb:BarStaticItem Content="{Binding StatusManager.CurrentTime, Source={x:Static Application.Current}}" ShowBorder="False" 
                                   AllowGlyphTheming="True" Glyph="{dx:DXImage SvgImages/XAF/State_Task_InProgress.svg}">
                    <dxb:BarStaticItem.ContentTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Margin="5,-1,0,1" FontWeight="Normal" FontSize="20" VerticalAlignment="Top" FontFamily="/ApplicationDSTS;component/Fonts/#Open 24 Display St"/>
                        </DataTemplate>
                    </dxb:BarStaticItem.ContentTemplate>
                </dxb:BarStaticItem>
            </dxr:RibbonStatusBarControl.RightItems>
        </dxr:RibbonStatusBarControl>

    </Grid>
</dx:ThemedWindow>
